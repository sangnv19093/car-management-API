<%- include('../partials/header') %>

<h2>Sửa Thông Tin Xe</h2>

<form action="/cars/<%= car._id %>?_method=PUT" method="POST">
    <label for="name">Tên Xe:</label>
    <input type="text" id="name" name="name" value="<%= car.name %>" required>

    <label for="manufacturer">Hãng Sản Xuất:</label>
    <input type="text" id="manufacturer" name="manufacturer" value="<%= car.manufacturer %>" required>

    <label for="year">Năm Sản Xuất:</label>
    <input type="number" id="year" name="year" value="<%= car.year %>" min="1886" required>

    <label for="price">Giá Bán (VND):</label>
    <input type="number" id="price" name="price" value="<%= car.price %>" min="0" required>

    <label for="description">Mô Tả:</label>
    <textarea id="description" name="description"><%= car.description %></textarea>

    <button type="submit">Cập Nhật Xe</button>
</form>

<%- include('../partials/footer') %>
